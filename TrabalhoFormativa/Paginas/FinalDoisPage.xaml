<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TrabalhoFormativa.Paginas.FinalDoisPage"
             Title="FinalDoisPage"
             NavigationPage.HasNavigationBar="False">
    <VerticalStackLayout Margin="0"
                 Padding="0"
                 Spacing="0">
        <Image HeightRequest="550" WidthRequest="600" Source="imagepaginafinal"/>

        <Label 
        Text="Muito obrigado por comprar em nossa loja." Margin="15" FontSize="25" FontFamily="monospace"/>

        <Button Text="Voltar" Margin="40"
    TextColor="#FFF" 
    WidthRequest="200" 
    x:Name="btnVoltar"
    Clicked="btnVoltar_Clicked"
    BackgroundColor="#1E1E1E"
    FontFamily="monospace"/>
    </VerticalStackLayout>
</ContentPage>