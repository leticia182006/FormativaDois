<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TrabalhoFormativa.Paginas.HomePage"
             BackgroundColor="#FFF"
             Title="HomePage"
             NavigationPage.HasNavigationBar="False">
    <VerticalStackLayout Margin="0"
                     Padding="0"
                     Spacing="0">
        <Image HeightRequest="455" WidthRequest="500" Source="paredehome"/>
      
        <StackLayout Orientation="Horizontal" Margin="70, 45, 20 ,0">
            <Button Text="Ver cores" Margin="5"
            FontFamily="monospace"
            TextColor="White"
            BackgroundColor="#1E1E1E"
            WidthRequest="120"
            x:Name="btnAcessar"
            Clicked="btnAcessar_Clicked"/>

            <Button Text="Voltar" Margin="5"
            FontFamily="monospace"
            TextColor="White"
            BackgroundColor="#1E1E1E"
            WidthRequest="120"
            x:Name="btnVoltar"
            Clicked="btnVoltar_Clicked"/>
        </StackLayout>
        <Image HeightRequest="70" WidthRequest="400" Source="imagemexplorarmarro" Margin="0, 210, 0 ,0"/>
    </VerticalStackLayout>
</ContentPage>